<%= form_with model: @form, local: true, class: "w-96 mx-auto p-6 bg-white rounded shadow-md" do |form| %>
  <h2 class="text-2xl font-bold mb-4">Hacer una nueva busqueda</h2>

  <div class="mb-4 flex-col">
    <%= form.label :name, "Nombre", class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :name, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-100" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, "Busqueda", class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_area :description, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-100", rows: 4 %>
  </div>

  <div class="mb-4">
    <%= form.check_box :processed_in_job, class: "mr-2 leading-tight", id: "show_email_checkbox" %>
    <span class="text-gray-700">Procesar en tarea</span>
  </div>

  <!-- Hidden email field -->
  <div id="email_field" class="mb-4 hidden">
    <%= form.label :email, "Correo ElectrÃ³nico", class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :email, class: "w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-100" %>
  </div>

  <!-- Hidden input for storing the email outside of the main model -->
  <input type="hidden" id="hidden_email" name="hidden_email" value="">

  <div class="mt-6">
    <%= form.submit "Crear Formulario", class: "px-4 py-2 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300" %>
  </div>
<% end %>

<%= link_to 'Volver al listado de formularios', forms_path, class: "block mt-4 text-blue-500 hover:underline w-96 mx-auto text-center" %>